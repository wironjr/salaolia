<div class="mt-2">
	<h4 class="text-center text-uppercase" style="color: #572057">Fluxo de caixa</h4>
	
	<div class="mt-3 text-center">
			<div class="mt-1">
				<%= link_to 'Caixa diário', servicos_do_dia_servicos_path, class:'text-white badge text-wrap', style:'text-decoration: none; font-size: 1.5rem; width: 15rem; height: 3rem; background-color: #572057 !important' %>
			</div>
	</div>

	<div class="mt-3 text-center">
			<div class="mt-1">
				<%= link_to 'Mostrar serviços', servicos_path, class:'text-white badge text-wrap', style:'text-decoration: none; font-size: 1.5rem; width: 15rem; height: 3rem; background-color: #572057 !important' %>
			</div>
	</div>

	<div class="d-flex justify-content-center mt-5">
		<div class="card text-center shadow" style="width: 15rem;">
			<div class="card-header">
			VALOR DO CAIXA <b>TOTAL</b>
			</div>
			<div class="card-body">
			<h5 class="card-title"><%= numero_real( @valor_total,2) %></h5>
			</div>
		</div>
	</div>

	<div class="d-flex justify-content-center mt-3">
		<div class="card text-center shadow" style="width: 15rem;">
			<div class="card-header">
			VALOR DO CAIXA <b>DIÁRIO</b>
			</div>
			<div class="card-body">
			<h5 class="card-title"><%= numero_real( @valor_total_dia,2) %></h5>
			</div>
		</div>
	</div>

	
