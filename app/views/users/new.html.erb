<h3 class="mb-4 mt-2">Cadastro de Usuários</h3>
<%= form_for @user do |form| %>

	<%= render 'layouts/error_messages', object: form.object %>

	<div class="mb-3">
			<%= form.label :nome,'Usuário', class:'form-label' %>
			<%= form.text_field :nome, class:'form-control' %>
	</div>

	<div class="mb-3">
			<%= form.label :password, 'Senha', class:'form-label' %>
			<%= form.password_field :password, class:'form-control' %>
	</div>
	
	<div class="mb-3">
			<%= form.label :password_confirmation, 'Confirme a senha', class:'form-label' %>
			<%= form.password_field :password_confirmation, class:'form-control moeda' %>
	</div>

	<div class=" ">
		<input type="checkbox" id="mostrar-senha" >
		<label for="mostrar-senha" style="font-size: 0.7rem; " class="">Mostar senhas</label>
	</div>

	<div class="mt-5 mb-5">
			<%= form.submit 'Cadastrar', class:'btn btn-primary', style:'background-color: #572057 !important; border: none' %>
			<%= link_to "Voltar", servicos_do_dia_servicos_path, class:'btn btn-primary', style:'background-color: #572057 !important; border: none' %>
	</div>
<% end %>

<hr>
<h3 class="mt-3">Usuários cadastrados</h3>
<hr>

<table class="table">
  <thead class="table-light">
    <tr>
      <th scope="col">Data</th>
      <th scope="col">Nome Usuário</th> 
    </tr>
  </thead>

  <tbody>
    <% @user_all.each do |user| %>
      <tr>
        <td scope="row"><div><b class="ocultar-res">Data</b> <div><%= user.created_at.strftime('%d/%m/%Y') %></div></div></td>
        <td scope="row"><div><b class="ocultar-res">Usuário</b> <div><%= user.nome %></div></div></td> 
		<td class="border-botton ocultar-res"></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
var input = document.querySelector('#user_password_confirmation');
var input2 = document.querySelector('#user_password');
var img = document.querySelector('#mostrar-senha');
img.addEventListener('click', function () {
  input.type = input.type == 'text' ? 'password' : 'text';
  input2.type = input2.type == 'text' ? 'password' : 'text';
});
</script>