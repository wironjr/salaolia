<a href="/despesas/new" class="fs-1 float-end ms-2" title="Adicionar nova despesa"><i class="bi bi-dash-circle-fill color-roxo"></i></a>
<a href="/servicos/new" class="fs-1 float-end" title="Adicionar novo serviço"><i class="bi bi-plus-circle-fill color-roxo"></i></a>
<div class="fs-2 text-uppercase text-center mb-3">Serviços do dia</div>

<div class="d-flex justify-content-center flex-wrap mb-5">
  <div class="card text-center me-3" style="width: 10rem;">
    <div class="card-header">
      Serviços do dia
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= numero_real( @valor_total_dia,2) %></h5>
    </div>
  </div>

  <div class="card text-center me-3 " style="width: 10rem;">
    <div class="card-header text-danger">
      Valor despesa
    </div>
    <div class="card-body">
    <a href="/despesas/" class="text-black" style="text-decoration: none !important"><h5 class="card-title"><%= numero_real( @despesas_valor ,2) %></h5></a>
    </div>
  </div>

  <div class="card text-center " style="width: 10rem;">
    <div class="card-header">
      Valor do lucro
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= numero_real( @caixa_total_dia,2) %></h5>
    </div>
  </div>
</div>

<div class="mt-3">
  <form>
  <div class="row mb-4">
    <div class="col-sm-2">
      <input type="text" name="nome_search" placeholder="Buscar por nome..." class="form-control ">
    </div>
    <div class="col-sm-2">
      <input type="text" name="servico_search" placeholder="Buscar por serviço..." class="form-control ">
    </div>
    <div class="col-sm-4">
      <button type="submit" class="btn bg-roxo text-white ms-3">Buscar</button>
      <a href="/servicos/servicos_do_dia" class="btn bg-roxo text-white ms-2">Limpar Filtro</a>
    </div>
  </div>
  </form>
</div>

<div class="p-2 mt-4 card shadow">
  <table class="table ">
    <thead class="hide--">
      <tr>
        <th style="width:3rem">Data</th>
        <th style="width:37rem">Nome cliente</th>
        <th style="width:15rem">Servico</th>
        <th style="width:15rem">Valor</th>
        <th>Ação</th>
      </tr>
    </thead>

    <tbody>
      <% @servicos_do_dia.each do |servico| %>
        <tr>
          <td><div><b class="ocultar-res">Data</b> <div><%= servico.data.strftime('%d/%m/%Y') %></div></div></td>
          <td><div><b class="ocultar-res">Cliente</b> <div><%= servico.nome_cliente.upcase %></div></div></td>
          <td><div><b class="ocultar-res">Serviço</b> <div><%= servico.servico.gsub(/\-.+/, "").upcase %></div></div></td></td>
          <td><div><b class="ocultar-res">Valor</b> <div><%= numero_real(servico.valor,2) %></div></div></td></td>
          <td>
            <%#= link_to 'Show', servico %>
            <%= link_to '', edit_servico_path(servico), class:'btn btn-primary rounded-pill bi bi-pencil-square text-white fs-6 bg-roxo' %>
            <%= link_to '', servico, method: :delete, data: { confirm: 'Deseja apagar esse serviço?' }, class: 'bg-roxo btn btn-primary rounded-pill bi bi-trash3-fill' %>
          </td>
          <td class="border-botton ocultar-res"></td>
        </tr>
       
      <% end %>
    </tbody>
  </table>
</div>

<div class="div-pagy mt-5">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>

<br>


